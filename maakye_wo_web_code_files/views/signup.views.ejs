<%- include('./partials/header.ejs');-%>
    <%- include('./partials/nav.ejs');-%>
        <!-- signup portion -->
        <div class="container">

            <div class="row" id="signup_container">
                <div class="col-12 offset-md-3 col-md-6 offset-md-3 login_or_sign_container">
                    <h1 class="text-center">Sign Up</h1>
                    <p class="text-center">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    </p>
                    <!-- sign up forms -->
                    <form action="/signup" method="POST">
                        <div class="form-group"><label for="">Full name</label><input type="text" class="form-control" name="full_name"></div>
                        <div class="form-group"><label for="">Email address</label><input type="text" class="form-control" name="email_address"></div>
                        <div class="form-group"><label for="">Phone number</label><input type="text" class="form-control" name="phone_number"></div>
